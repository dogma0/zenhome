type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  createdAt: DateTime!
  updatedAt: DateTime!
  tourings: [Touring!]! @relation(name: "TouringsByUser")
  offers: [Offer!]! @relation(name: "OffersByUser")
}

type Offer {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  listingInfo: String!
  status: OFFER_STATUS! @default(value: "IN_DRAFT")
  creator: User! @relation(name: "OffersByUser")
}

type Touring {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  listingInfo: String!
  status: TOURING_STATUS! @default(value: "IN_DRAFT")
  creator: User! @relation(name: "TouringsByUser")
}


enum OFFER_STATUS {
  IN_DRAFT
  PENDING_REVIEW
  REVIEWED
  SUBMITTED
  ACCEPTED
  REJECTED
  CANCELED
}

enum TOURING_STATUS {
  IN_DRAFT
  PENDING_SELLER_CONFIRMATION
  CONFIMED_BY_SELLER
  REJECTED_BY_SELLER
  CANCELED
  VIEWER_ATTENED
}